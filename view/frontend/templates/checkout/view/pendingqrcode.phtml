function get_ajax_transaction($){
var urlresponseQrcode = '<?php echo $responseQrcode; ?>';
var idQrcode = '<?php echo $_orderId; ?>';
var keyQrcode = '<?php echo $_transactionId; ?>';
$.ajax({
    type: 'POST',
    url: urlresponseQrcode,
    dataType: "json",
    cache: false,
    data: {
        id: idQrcode,
        key: keyQrcode
    },
    success: function (response) {
        if (response.success) {
            if (response.gbp_reference_no) {
                window.location = window.location.pathname;
            }
        }
    },
    error: function (response) {}
});
}
